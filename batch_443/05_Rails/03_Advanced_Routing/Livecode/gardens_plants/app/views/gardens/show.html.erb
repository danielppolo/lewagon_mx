<p id="notice"><%= notice %></p>

<div class="banner"
  style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @garden.banner_url %>');">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>

<div class="container mt-4">
  <div class="row">
    <% @garden.plants.each do |plant| %>
    <div class="col-3">
      <div class="card-trip">
        <img src="<%= plant.picture_url %>" />
        <div class="card-trip-infos">
          <div>
            <h2><%= plant.name %></h2>
          </div>
          <div>
            <%= link_to 'ðŸš®', plant_path(plant), method: 'delete', data: { confirm: 'Are you sure to delete?' }%>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<div class="container mt-4">
  <h3>Add a new plant</h3>
  <%= simple_form_for([@garden, @plant]) do |form| %>
  <%= form.input :name %>
  <%= form.input :picture_url %>
  <%= form.submit %>
  <% end %>

  <%= link_to 'Edit', edit_garden_path(@garden) %> |
  <%= link_to 'Back', gardens_path %>
</div>