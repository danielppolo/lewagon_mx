<div class="container">
  <h1>Add new label to <%= @plant.name %></h1>
  <%= simple_form_for([@plant, @plant_label]) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%#  f.input :label_id, collection: Label.all %>
      <%= f.association :label, input_html:  { multiple: true }%>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>

</div>